.qa-main {
  position: absolute;
  overflow: hidden;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: linear-gradient(#8f0ab9, #9bcaf3);
}

.circle-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  -webkit-border-radius: 100rpx;
  -moz-border-radius: 100rpx;
  -ms-border-radius: 100rpx;
  -o-border-radius: 100rpx;
  position: absolute;
  margin-top: calc(20% - 50rpx);
  left: calc(50% - 50rpx);
  text-align: center;
  line-height: 100rpx;
}

.wux-circle {
  width: 100rpx;
  height: 100rpx;
}

.question-box {
  height: 80%;
  width: 80%;
  margin: auto;
  margin-top: 20%;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  border-radius: 20px;
  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  -ms-border-radius: 20px;
  -o-border-radius: 20px;
}

.finish-box {
  background-color: #fff;
  padding: 50rpx;
  border-radius: 20px;

}

.btn {
  margin-top: 20px;
}


.finish-box button {
  background-color: #09bb07;
  color: #fff;
  margin-bottom: 20px;
  border-radius: 10px;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  -ms-border-radius: 10px;
  -o-border-radius: 10px;
}

.refuse {
  color: #09bb07;
  background-color: #eee;
  border-radius: 10px;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  -ms-border-radius: 10px;
  -o-border-radius: 10px;
}

.text-q {

  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;

  margin: 100rpx 20rpx 10rpx 20rpx;
  width: 94%;
}

.q-box {
  font-size: 14pt;
  color: #fff;
  text-align: left;
  margin-top: 10px;
  text-indent: 28pt;
}

.a-box {
  /* height: 3%;
  width: 94%; */
  margin-top: 45px;
}

.text-a {
  text-indent: 0;
  font-size: 12pt;
  color: #fff;
  text-align: left;
  margin: 50rpx auto;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
  padding: 5px 15px;
  width: 80%;
  min-width: 200rpx;
  border-radius: 20px;
  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  -ms-border-radius: 20px;
  -o-border-radius: 20px;
}

.correct {
  background-color: #09bb07;
  color: #fff;
}

.error {
  background-color: #e64340;
  color: #fff;
}

.red-bg {
  /* border: 1px solid #e64340; */
  border-top: 1px solid #e64340;
  border-bottom: 1px solid #e64340;
}